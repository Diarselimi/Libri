{% extends 'base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/iconfont/horizontalListing.css') }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <ul class="list-group list-group-horizontal">
                {#//to set the width of the category#}
                {% set width = 100 / categories|length %}
                {% for category in categories %}
                    <li class="list-group-item" style="width: {{ width }}%;">
                        <img src="{{ asset('assets/images/bookcategories/' ~ category.icon) }}" alt="{{ category.title }}"
                             width="30%">
                        <a href="#"><p class="category-title">{{ category.title }}</p></a>
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h3 class="title">{{ 'Most rated books'|trans }}</h3>
            <ul class="list-group">
                {% for book in books %}
                    <li class="list-group-item">
                        <img src="{{ asset('uploads/covers/2d4e6649a60eec5fe1544ea1ac2496b7.jpg') }}" alt=""
                             width="70px"
                             class="img-responsive ">
                        <h4>{{ book.title }}</h4>
                        <p>some description here </p>
                        <label for="">rating here</label>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-4">
            <h3 class="title">{{ 'Most readed books'|trans }}</h3>
            <ul class="list-group">
                {% for book in books %}
                    <li class="list-group-item">
                        {{ book.title }}
                        <a href="{{ path('view_the_book', {id: book.id}) }}" class="btn btn-info btn-sm"><i
                                    class="fa fa-edit"></i>View</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-4">
            <h3 class="title">{{ 'Latest books'|trans }}</h3>
            <ul class="list-group">
                {% for book in books %}
                    <li class="list-group-item">
                        {{ book.title }}
                        <a href="{{ path('view_the_book', {id: book.id}) }}" class="btn btn-info btn-sm"><i
                                    class="fa fa-edit"></i>View</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}